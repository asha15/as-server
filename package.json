{
  "name": "as-server",
  "version": "0.1.0",
  "description": "Web server for apnasamaan",
  "scripts": {
    "start": "npm run serve",
    "build-ts": "tsc",
    "serve": "cross-env NODE_ENV=production node dist/server.js",
    "watch-node": "nodemon --inspect=0.0.0.0:9229 dist/server.js",
    "dev": "cross-env NODE_ENV=development concurrently --kill-others \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-ts": "tsc -w",
    "lint": "eslint src/**/*",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,json,md}": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.6",
    "@types/node": "^11.9.5",
    "@typescript-eslint/eslint-plugin": "^1.4.1",
    "@typescript-eslint/parser": "^1.4.1",
    "concurrently": "^4.1.0",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cross-env": "^5.2.0",
    "express": "^4.16.4"
  }
}
